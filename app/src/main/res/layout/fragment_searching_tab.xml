<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.home.widget.tab.SearchingTabFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll_guest_mode">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/white"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/il_man_shows_gesture_great_idea"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have to login to access all feature in this app"
                style="@style/Font.SemiBold.16"
                android:layout_marginHorizontal="20dp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                android:textColor="@color/dark_blue"/>
            <android.widget.Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_corner_35"
                android:text="Login"
                android:id="@+id/btn_login"
                android:textAllCaps="false"
                style="@style/Font.Bold.16"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/gotham_bold"
                android:paddingHorizontal="50dp"
                android:elevation="15dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/etl_search"
                app:boxStrokeWidth="0dp"
                app:hintEnabled="false"
                app:boxStrokeWidthFocused="0dp"
                app:endIconMode="custom"
                app:startIconDrawable="@drawable/ic_close"
                app:startIconTint="@color/light_grey"
                app:endIconDrawable="@drawable/ic_close"
                app:endIconTint="@color/grey"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_search"
                    android:background="@drawable/edit_text_full_green_border_corner"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="10dp"
                    android:hint="Search..."
                    style="@style/Font.Bold.14"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tab_layout"
                app:layout_constraintTop_toBottomOf="@id/etl_search"
                app:tabIndicatorColor="@color/green"
                app:tabSelectedTextColor="@color/green"
                android:paddingVertical="8dp"
                style="@style/Font.SemiBold.16"
                android:background="@color/white"/>
            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/view_pager2"
                app:layout_constraintTop_toBottomOf="@id/tab_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>