<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.service.DetailServiceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:id="@+id/toolbar"
        android:paddingVertical="15dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cl_main"
            android:visibility="visible">
            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/black"
                android:id="@+id/vp_service_photo"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_index_photo"
                android:text="1/1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/grey_corner_35"
                android:textAlignment="center"
                android:paddingVertical="5dp"
                android:letterSpacing="0.2"
                android:layout_marginTop="150dp"
                android:layout_marginRight="10dp"
                style="@style/Font.Regular.12"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_price_tag"
                app:layout_constraintTop_toBottomOf="@id/vp_service_photo"
                android:paddingVertical="8dp"
                android:paddingHorizontal="10dp"
                android:background="@color/white_smoke"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_price_tag"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp.1000"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_service_price"
                    style="@style/Font.Bold.20"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_service_title"
                app:layout_constraintTop_toBottomOf="@id/ll_price_tag"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:text="Title"
                style="@style/Font.Bold.20"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_service_definition"
                app:layout_constraintTop_toBottomOf="@id/tv_service_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:text="Definition of test"
                style="@style/Font.Regular.16"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_freelancer"
                app:layout_constraintTop_toBottomOf="@id/tv_service_definition"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/iv_profile_picture"
                    app:shapeAppearanceOverlay="@style/ImageViewCircle"
                    android:src="@color/grey"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Freelancer Name"
                        android:id="@+id/tv_freelancer_name"
                        style="@style/Font.Medium.14"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_email"
                        android:text="tffajari@gmail.com"
                        android:textColor="@color/grey"
                        style="@style/Font.Thin.12"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:id="@+id/ll_review_title"
                app:layout_constraintTop_toBottomOf="@id/ll_freelancer"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11 reviews"
                    android:id="@+id/tv_total_review"
                    style="@style/Font.Bold.12"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/grey"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tv_see_all_review"
                    android:text="See All"
                    style="@style/Font.Bold.14"
                    android:textColor="@color/green"
                    android:gravity="end"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_review"
                android:overScrollMode="never"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/ll_review_title"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_review"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:theme="@style/ProgressBarGreen"
        android:id="@+id/pb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:orientation="horizontal"
        android:id="@+id/ll_bottom"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_chat"
            android:src="@drawable/ic_chat"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_checkout"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_order"
            android:layout_marginLeft="15dp"
            android:background="@drawable/solid_green_corner_7"
            android:text="Order"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            style="@style/Font.Bold.16"
            android:textColor="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>