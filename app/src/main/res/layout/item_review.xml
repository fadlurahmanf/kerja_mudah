<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_top"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/iv_commenter_profile_picture"
            app:shapeAppearanceOverlay="@style/ImageViewCircle"
            android:src="@drawable/placeholder_person" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_commenter_name"
                android:text="Commenter Name"
                style="@style/Font.SemiBold.16"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_commenter_star"
                android:visibility="visible"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginTop="2dp"
                    app:tint="@color/yellow"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 days ago"
            android:id="@+id/tv_comment_time"
            android:layout_gravity="center_vertical"
            style="@style/Font.Regular.12"
            android:textColor="@color/grey"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comment"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_top"
        android:gravity="center_vertical"
        style="@style/Font.Regular.14"
        android:textColor="@color/dark_blue"
        android:text="@string/dummy_text_30_word"
        android:maxLength="250"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_freelancer_comment"
        app:layout_constraintTop_toBottomOf="@id/tv_comment"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FREELANCER"
                android:layout_marginLeft="10dp"
                style="@style/Font.Bold.12"
                android:textColor="@color/green"
                android:background="@drawable/solid_green_tosca_corner_3"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/iv_freelancer_profile_picture"
                app:shapeAppearanceOverlay="@style/ImageViewCircle"
                android:src="@drawable/placeholder_person" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_freelancer_name"
                android:text="Freelancer Name"
                style="@style/Font.SemiBold.12"
                android:textColor="@color/black"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_comment_freelancer"
            android:layout_marginLeft="45dp"
            app:layout_constraintTop_toBottomOf="@id/ll_top"
            app:layout_constraintBottom_toTopOf="@id/ll_bottom"
            android:gravity="center_vertical"
            style="@style/Font.Regular.14"
            android:textColor="@color/dark_blue"
            android:text="@string/dummy_text_30_word"
            android:maxLength="250"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>