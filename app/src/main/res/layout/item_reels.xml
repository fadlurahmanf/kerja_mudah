<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="250dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_thumbnail"
        android:background="@color/light_grey"
        android:src="@color/light_grey"
        app:shapeAppearanceOverlay="@style/ImageViewCorner10"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_description"
        app:layout_constraintBottom_toTopOf="@id/tv_freelancer_name"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/dummy_text_15_word"
        style="@style/Font.Regular.12"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_freelancer_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:text="Freelancer Name"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/Font.Regular.14"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>