<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="30dp"
    tools:context=".ui.core.PreviewMultipleImageActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 of 0"
        android:id="@+id/tv_index"
        style="@style/Font.Regular.16"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/grey_corner_35"
        android:paddingHorizontal="25dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/vp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/ll_confirm"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal">
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="Batal"
            android:id="@+id/btn_cancel"
            android:textAllCaps="false"
            style="@style/Font.Thin.14"
            android:textColor="@color/green"
            android:fontFamily="@font/notosans_thin"
            android:background="@drawable/solid_white_corner_15"/>
        <android.widget.Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_select"
            android:layout_marginLeft="5dp"
            android:text="Pilih"
            android:textAllCaps="false"
            android:fontFamily="@font/notosans_thin"
            android:textColor="@color/white"
            android:background="@drawable/green_corner_15"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>