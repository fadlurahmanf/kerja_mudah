<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pdf.FormPdfActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arrival date"
                android:layout_marginTop="10dp"
                style="@style/Font.Regular.16"
                android:layout_marginHorizontal="15dp"
                android:textColor="@color/dark_blue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/solid_white_corner_5"
                android:padding="10dp"
                android:drawableRight="@drawable/ic_arrow_down"
                android:drawableTint="@color/grey"
                android:text="Arrival Date"
                style="@style/Font.Bold.16"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:elevation="5dp"
                android:textColor="@color/light_grey"/>
            <com.app.kerja_mudah.custom_view.KerjaMudahButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/btn_create_pdf"
                android:layout_marginHorizontal="15dp"
                app:button_text="Create PDF"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>