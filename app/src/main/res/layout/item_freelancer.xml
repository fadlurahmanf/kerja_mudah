<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="280dp"
        android:elevation="5dp"
        android:background="@drawable/solid_white_corner_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@color/black"
            app:shapeAppearanceOverlay="@style/ImageViewTopCorner5"
            android:id="@+id/iv_highlight_freelancer"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/iv_highlight_freelancer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll1"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/iv_profile_picture"
                    app:shapeAppearanceOverlay="@style/ImageViewCircle"
                    android:layout_gravity="center"
                    android:background="@color/white" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Freelancer Name"
                        android:maxLength="20"
                        android:id="@+id/tv_freelancer_name"
                        android:ellipsize="end"
                        android:gravity="center"
                        style="@style/Font.Regular.12"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Top Seller"
                        android:gravity="center"
                        style="@style/Font.Thin.12"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_favorite_border"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="13dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/tv_highlight"
                app:layout_constraintTop_toBottomOf="@id/ll1"
                app:layout_constraintBottom_toTopOf="@id/ll2"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingVertical="5dp"
                android:ellipsize="end"
                style="@style/Font.Regular.12"
                android:maxLines="2"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Highlight"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ll2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/yellow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_overall_rating"
                    android:layout_marginLeft="2dp"
                    android:text="5.0"
                    style="@style/Font.SemiBold.16"
                    android:textColor="@color/yellow"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:id="@+id/tv_total_review"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    style="@style/Font.Bold.12"
                    android:textColor="@color/grey"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>