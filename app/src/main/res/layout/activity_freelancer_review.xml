<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ui.freelancer.FreelancerReviewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="15dp"
        android:background="@color/green"
        android:id="@+id/toolbar"
        android:visibility="visible"
        android:paddingVertical="15dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/iv_back"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REVIEW"
            style="@style/Font.Bold.16"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/sv_filter"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:scrollbarSize="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_filter_all"
                style="@style/Font.Bold.16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/green_corner_35"
                android:gravity="center_vertical"
                android:paddingHorizontal="30dp"
                android:text="All"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/ll_filter_5"
                android:layout_marginLeft="10dp"
                android:background="@drawable/white_corner_35_green_border"
                android:paddingHorizontal="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_star_5"
                    android:src="@drawable/ic_star_outlined"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_star_5"
                    android:layout_marginBottom="1dp"
                    android:text="5.0"
                    style="@style/Font.Bold.14"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/green"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:id="@+id/ll_filter_4"
                android:background="@drawable/white_corner_35_green_border"
                android:paddingHorizontal="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_star_4"
                    android:src="@drawable/ic_star_outlined"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_star_4"
                    android:layout_marginBottom="1dp"
                    android:text="4.0"
                    style="@style/Font.Bold.14"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/green"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:id="@+id/ll_filter_3"
                android:background="@drawable/white_corner_35_green_border"
                android:paddingHorizontal="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_star_3"
                    android:src="@drawable/ic_star_outlined"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/tv_star_3"
                    android:layout_marginBottom="1dp"
                    android:text="3.0"
                    style="@style/Font.Bold.14"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/green"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/ll_filter_2"
                android:layout_marginLeft="10dp"
                android:background="@drawable/white_corner_35_green_border"
                android:paddingHorizontal="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_star_2"
                    android:src="@drawable/ic_star_outlined"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="1dp"
                    android:id="@+id/tv_star_2"
                    android:text="2.0"
                    style="@style/Font.Bold.14"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/green"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:id="@+id/ll_filter_1"
                android:background="@drawable/white_corner_35_green_border"
                android:paddingHorizontal="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_star_1"
                    android:src="@drawable/ic_star_outlined"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_star_1"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="1dp"
                    android:text="1.0"
                    style="@style/Font.Bold.14"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/green"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/rv_review"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/sv_filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_review"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>