<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday, 18 Sept"
            style="@style/Font.Regular.14"
            android:id="@+id/tv_date"
            android:textColor="@color/dark_blue"/>
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:orientation="vertical"
            android:elevation="5dp"
            android:id="@+id/ll_second"
            android:background="@drawable/solid_white_corner_5"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"
                android:id="@+id/tv_time"
                style="@style/Font.Regular.14"
                android:textColor="@color/dark_blue"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/iv_sky"
                android:src="@drawable/il_mostly_cloudy"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20Â°C"
                android:id="@+id/tv_celcius"
                style="@style/Font.SemiBold.16"
                android:textColor="@color/dark_blue"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>