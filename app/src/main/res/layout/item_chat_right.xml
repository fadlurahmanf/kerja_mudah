<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="50dp"
    android:paddingVertical="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_main"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@id/iv_chat_not_selected"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/solid_green_corner_5"
            android:layout_marginVertical="2dp"
            android:orientation="vertical"
            android:id="@+id/ll_second"
            android:gravity="end"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            android:paddingVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:elevation="3dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/ll1">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/iv_1"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ImageViewCorner10"
                    android:background="@color/light_grey"
                    android:layout_marginHorizontal="5dp" />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/iv_2"
                    android:visibility="gone"
                    android:background="@color/light_grey"
                    app:shapeAppearanceOverlay="@style/ImageViewCorner10"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/ll1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/ll2">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/iv_3"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ImageViewCorner10"
                    android:background="@color/light_grey"
                    android:layout_marginHorizontal="5dp" />
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:id="@+id/iv_4"
                    android:visibility="gone"
                    android:background="@color/light_grey"
                    app:shapeAppearanceOverlay="@style/ImageViewCorner10"
                    android:scaleType="centerCrop"
                    android:layout_marginHorizontal="5dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:id="@+id/tv_text_chat"
                android:paddingRight="5dp"
                android:visibility="visible"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll2"
                android:text=""
                android:textColor="@color/white"
                style="@style/Font.Regular.14"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="5dp"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:id="@+id/tv_chat_created_at"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    style="@style/Font.Regular.10"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/iv_status"
                    android:visibility="gone"
                    android:src="@drawable/ic_double_check"
                    app:tint="@color/white"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/iv_chat_not_selected"
        android:visibility="gone"
        app:layout_constraintRight_toLeftOf="@id/iv_chat_selected"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/grey_border_corner_1"
        android:layout_marginRight="10dp"/>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:id="@+id/iv_chat_selected"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_check"
        app:tint="@color/white"
        android:background="@drawable/green_corner_1"
        android:layout_marginRight="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>