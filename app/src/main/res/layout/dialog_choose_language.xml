<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Language"
            style="@style/Font.SemiBold.20"
            android:id="@+id/tv_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/grey"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/english"
            android:id="@+id/iv_en"
            android:scaleType="centerCrop"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:shapeAppearanceOverlay="@style/ImageViewCorner5"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="English"
            android:id="@+id/tv_en"
            style="@style/Font.SemiBold.16"
            android:layout_marginTop="40dp"
            android:textColor="@color/grey"
            app:layout_constraintStart_toEndOf="@id/iv_en"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintLeft_toRightOf="@id/iv_en"
            android:layout_marginLeft="15dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/indonesia"
            android:id="@+id/iv_id"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/iv_en"
            app:shapeAppearanceOverlay="@style/ImageViewCorner5"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Indonesia"
            android:id="@+id/tv_id"
            style="@style/Font.SemiBold.16"
            android:layout_marginTop="20dp"
            android:textColor="@color/grey"
            app:layout_constraintStart_toEndOf="@id/iv_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_en"
            app:layout_constraintLeft_toRightOf="@id/iv_id"
            android:layout_marginLeft="15dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>