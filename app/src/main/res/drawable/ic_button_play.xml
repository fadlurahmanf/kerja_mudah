<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/green_opacity_20"/>
        </shape>
    </item>
    <item
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="@color/green"/>
        </shape>
    </item>
    <item android:drawable="@drawable/ic_play_white"
        android:left="20dp"
        android:right="20dp"
        android:bottom="20dp"
        android:top="20dp"
        app:tint="@color/white"/>
</layer-list>